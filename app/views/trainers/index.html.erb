<p id="notice"><%= notice %></p>

<h1>Trainers</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Name</th>
      <th>Address</th>
      <th>Current weight</th>
      <th>Height</th>
      <th>Gender</th>
      <th>Email address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.client_id %></td>
        <td><%= trainer.name %></td>
        <td><%= trainer.address %></td>
        <td><%= trainer.current_weight %></td>
        <td><%= trainer.height %></td>
        <td><%= trainer.gender %></td>
        <td><%= trainer.email_address %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

